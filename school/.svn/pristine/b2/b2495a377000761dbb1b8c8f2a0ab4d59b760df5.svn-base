package com.dkt.school.common.util;

import java.util.List;

public class ListUtil {
	
	/**
	 * 把字符串列表转换为字符串，用逗号分隔
	 * @param list
	 * @return 
	 * @author Stephen
	 */
	public static String stringListToString(List<String> list) {
		String result = "";
		for (int i = 0; i < list.size(); i++) {
			if (i > 0) {
				result += ", ";
			} 
			result += list.get(i);		
		}
		return result;
	}
	
	/**
	 * 把字符串列表转换为字符串，用逗号分隔
	 * @param list
	 * @return 
	 * @author Stephen
	 */
	public static String integerListToString(List<Integer> list) {
		String result = "";
		for (int i = 0; i < list.size(); i++) {
			if (i > 0) {
				result += ", ";
			} 
			result += list.get(i).toString();		
		}
		return result;
	}

}
